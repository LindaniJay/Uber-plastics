# Environment Variables for EcoTrack Python Backend
# Copy this file to .env for local development

# API Configuration
PYTHON_API_URL=http://localhost:8000
CONFIDENCE_THRESHOLD=0.5

# Model Configuration
MODEL_PATH=./yolov8n.pt
MODEL_DOWNLOAD_URL=https://github.com/ultralytics/assets/releases/download/v0.0.0/yolov8n.pt

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://ecotrack.vercel.app

# Logging
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGS=true

# Performance
MAX_FILE_SIZE=10485760
MAX_DETECTION_TIME=30

# Security
API_KEY_REQUIRED=false
RATE_LIMIT_PER_MINUTE=60
