# Environment Variables for EcoTrack Frontend
# Copy this file to .env.local for local development

# Application URL (update with your Vercel deployment URL)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Python Backend API URL (update with your Python backend Vercel URL)
NEXT_PUBLIC_PYTHON_API_URL=http://localhost:8000

# Default region for environmental data
NEXT_PUBLIC_REGION=cabo-verde

# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# AI Model Configuration
NEXT_PUBLIC_AI_MODEL_URL=/models/coco-ssd
NEXT_PUBLIC_CONFIDENCE_THRESHOLD=0.5

# PWA Configuration
NEXT_PUBLIC_PWA_NAME=UberPlastics
NEXT_PUBLIC_PWA_SHORT_NAME=UberPlastics
NEXT_PUBLIC_PWA_DESCRIPTION=AI-Powered Plastic Waste Tracking Platform

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_HOTJAR_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
